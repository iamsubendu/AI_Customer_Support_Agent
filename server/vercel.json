{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1",
    "PORT": "3000",
    "CORS_ORIGIN": "https://your-netlify-app.netlify.app"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
